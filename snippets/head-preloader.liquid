{% comment %}
	This snippet preloads assets based on the current template.
{% endcomment %}

{%- liquid

  echo 'theme.css' | asset_url | preload_tag: as: 'style'
  echo 'component-header.css' | asset_url | preload_tag: as: 'style'

	echo 'component-product-item.css' | asset_url | preload_tag: as: 'style'
	echo 'component-product-variants.css' | asset_url | preload_tag: as: 'style'

	if template contains 'index'
		echo 'section-slider-vertical.js' | asset_url | preload_tag: as: 'script'
  elsif template contains 'article'
    echo 'section-main-article.css' | asset_url | preload_tag: as: 'style'
  elsif template contains 'blog'
    echo 'component-blog-item.css' | asset_url | preload_tag: as: 'style'
  elsif template contains 'product' 
    echo 'component-product-page.css' | asset_url | preload_tag: as: 'style'
  endif
    
-%}