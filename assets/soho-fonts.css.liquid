/* Soho Pro Font Family */

@font-face {
  font-family: 'Soho Pro';
  src: url('{{ "SohoPro-Regular.otf" | asset_url }}') format('opentype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

