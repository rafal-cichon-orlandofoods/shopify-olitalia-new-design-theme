<section class="redesign-recipes redesign-recipes-showcase">
  <div class="redesign-recipes__container">
    {% if section.settings.title != blank %}
      <h2 class="redesign-recipes__title">{{ section.settings.title }}</h2>
    {% endif %}
    
    {%- comment -%} Navigation Arrows - Desktop only {%- endcomment -%}
    <button class="redesign-recipes__nav-arrow redesign-recipes__nav-arrow--prev" aria-label="Previous recipe">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
      </svg>
    </button>
    <button class="redesign-recipes__nav-arrow redesign-recipes__nav-arrow--next" aria-label="Next recipe">
      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
      </svg>
    </button>
    
    <div class="redesign-recipes__grid">
      {% comment %} Auto-fetch recipe pages {% endcomment %}
      {% assign all_recipe_pages = pages | where: 'template_suffix', 'recipe' %}
      {% assign recipe_limit = section.settings.recipe_limit | default: 6 %}
      
      {% for recipe_page in all_recipe_pages limit: recipe_limit %}
        {% assign recipe_image = recipe_page.metafields.recipe.featured_image %}
        {% assign recipe_description = recipe_page.metafields.recipe.description | default: recipe_page.content | strip_html | truncate: 100 %}
        
        <a href="{{ recipe_page.url }}" class="redesign-recipe-card">
          <div class="redesign-recipe-card__image-wrapper">
            {% if recipe_image %}
              <img 
                src="{{ recipe_image | image_url: width: 680 }}" 
                alt="{{ recipe_page.title }}"
                class="redesign-recipe-card__image"
                loading="lazy"
              >
            {% else %}
              <div class="redesign-recipe-card__image redesign-recipe-card__image--placeholder">
                <span>No Image</span>
              </div>
            {% endif %}
          </div>
          
          <div class="redesign-recipe-card__content">
            <h3 class="redesign-recipe-card__title">{{ recipe_page.title }}</h3>
            
            {% if recipe_description != blank %}
              <p class="redesign-recipe-card__description">{{ recipe_description }}</p>
            {% endif %}
            
            <span class="redesign-recipe-card__button">
              Try Recipe â†’
            </span>
          </div>
        </a>
      {% endfor %}
      
      {% comment %} Show message if no recipes {% endcomment %}
      {% if all_recipe_pages.size == 0 %}
        <div style="padding: 60px 20px; text-align: center; color: #666;">
          <p>No recipes available yet.</p>
        </div>
      {% endif %}
    </div>
    
    {% comment %} Scroll Dots {% endcomment %}
    {% if all_recipe_pages.size > 1 %}
      <div class="redesign-recipes__dots">
        {% for i in (1..all_recipe_pages.size) limit: recipe_limit %}
          <div class="redesign-recipes__dot {% if forloop.first %}active{% endif %}"></div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const grid = document.querySelector('.redesign-recipes__grid');
  const cards = document.querySelectorAll('.redesign-recipe-card');
  const dots = document.querySelectorAll('.redesign-recipes__dot');
  const prevArrow = document.querySelector('.redesign-recipes__nav-arrow--prev');
  const nextArrow = document.querySelector('.redesign-recipes__nav-arrow--next');
  
  if (!grid || cards.length === 0 || dots.length === 0) return;
  
  let isScrolling = false;
  let currentIndex = 0;
  
  function updateActiveCard() {
    if (isScrolling) return;
    
    const scrollLeft = grid.scrollLeft;
    const containerWidth = grid.offsetWidth;
    const totalWidth = grid.scrollWidth;
    let activeIndex = 0;
    
    // Check if we're at the very end (last card should be active)
    if (scrollLeft + containerWidth >= totalWidth - 10) {
      activeIndex = cards.length - 1;
    } else {
      // Calculate which card is most visible
      let maxVisibility = 0;
      
      cards.forEach((card, index) => {
        const cardLeft = card.offsetLeft;
        const cardRight = cardLeft + card.offsetWidth;
        const visibleLeft = Math.max(cardLeft, scrollLeft);
        const visibleRight = Math.min(cardRight, scrollLeft + containerWidth);
        const visibility = Math.max(0, visibleRight - visibleLeft) / card.offsetWidth;
        
        if (visibility > maxVisibility) {
          maxVisibility = visibility;
          activeIndex = index;
        }
      });
    }
    
    currentIndex = activeIndex;
    
    // Update card opacity
    cards.forEach((card, index) => {
      card.style.opacity = index === activeIndex ? '1' : '0.3';
    });
    
    // Update dots
    dots.forEach((dot, index) => {
      if (index === activeIndex) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
    
    // Update arrow states
    updateArrowStates();
  }
  
  function updateArrowStates() {
    if (!prevArrow || !nextArrow) return;
    
    // Disable prev arrow at start
    if (currentIndex === 0) {
      prevArrow.classList.add('redesign-recipes__nav-arrow--disabled');
    } else {
      prevArrow.classList.remove('redesign-recipes__nav-arrow--disabled');
    }
    
    // Disable next arrow at end
    if (currentIndex === cards.length - 1) {
      nextArrow.classList.add('redesign-recipes__nav-arrow--disabled');
    } else {
      nextArrow.classList.remove('redesign-recipes__nav-arrow--disabled');
    }
  }
  
  function scrollToCard(index) {
    if (index < 0 || index >= cards.length) return;
    
    isScrolling = true;
    const targetCard = cards[index];
    const isLastCard = index === cards.length - 1;
    
    let scrollPosition;
    if (isLastCard) {
      // For the last card, scroll to the very end
      scrollPosition = grid.scrollWidth - grid.offsetWidth;
    } else {
      // For other cards, center them
      scrollPosition = targetCard.offsetLeft - (grid.offsetWidth - targetCard.offsetWidth) / 2;
    }
    
    grid.scrollTo({
      left: Math.max(0, scrollPosition),
      behavior: 'smooth'
    });
    
    // Reset scrolling flag after animation
    setTimeout(() => {
      isScrolling = false;
      updateActiveCard();
    }, 500);
  }
  
  // Arrow click handlers
  if (prevArrow) {
    prevArrow.addEventListener('click', () => {
      scrollToCard(currentIndex - 1);
    });
  }
  
  if (nextArrow) {
    nextArrow.addEventListener('click', () => {
      scrollToCard(currentIndex + 1);
    });
  }
  
  // Scroll event
  grid.addEventListener('scroll', updateActiveCard);
  
  // Dot click handlers
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      scrollToCard(index);
    });
  });
  
  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      scrollToCard(currentIndex - 1);
    } else if (e.key === 'ArrowRight') {
      scrollToCard(currentIndex + 1);
    }
  });
  
  // Initial update
  setTimeout(() => {
    updateActiveCard();
  }, 100);
});
</script>

{% schema %}
{
  "name": "Redesign Recipes Showcase",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Recipes"
    },
    {
      "type": "range",
      "id": "recipe_limit",
      "min": 3,
      "max": 12,
      "step": 1,
      "label": "Number of recipes to show",
      "default": 6
    }
  ],
  "presets": [
    {
      "name": "Redesign Recipes Showcase"
    }
  ]
}
{% endschema %}
