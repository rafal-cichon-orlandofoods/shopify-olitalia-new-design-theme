{% comment %} Temporary disable assets until they're recognized {% endcomment %}
{% comment %} {{ 'production-figma.css' | asset_url | stylesheet_tag }} {% endcomment %}
{% comment %} <script src="{{ 'production-counter.js' | asset_url }}" defer></script> {% endcomment %}

<style>
/* Inline basic styles for now */
.production-figma {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  color: #121212;
  background: white;
}

.production-figma__hero-bg {
  position: relative;
  width: 100vw;
  height: 734px;
  overflow: hidden;
  margin-left: calc(-50vw + 50%);
}

.production-figma__hero-image {
  position: absolute;
  width: 170.17%;
  height: 240.08%;
  left: -58.47%;
  top: -70.03%;
  max-width: none;
  object-fit: cover;
}

.production-figma__hero-text {
  max-width: 1400px;
  margin: 60px auto 100px;
  padding: 0 40px;
  font-weight: 300;
  line-height: 36px;
  font-size: 24px;
}

.production-figma__hero-title {
  font-weight: 600;
  font-size: 96px;
  line-height: normal;
  margin: 0 0 24px 0;
}

.production-figma__hero-subtitle {
  font-size: 32px;
  line-height: normal;
  margin: 0 0 32px 0;
}

.production-figma__hero-description {
  font-size: 32px;
  line-height: normal;
}

.production-figma__quality {
  max-width: 1400px;
  margin: 100px auto;
  padding: 0 40px;
  display: grid;
  grid-template-columns: 379px 1fr;
  gap: 60px;
  align-items: start;
}

.production-figma__quality-icon {
  width: 379px;
  height: 379px;
}

.production-figma__quality-icon img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.production-figma__quality-content {
  padding-top: 50px;
}

.production-figma__quality-title {
  font-weight: 600;
  font-size: 96px;
  line-height: 90px;
  margin: 0 0 30px 0;
}

.production-figma__quality-description {
  max-width: 790px;
  font-weight: 300;
  font-size: 24px;
  line-height: 36px;
  margin: 0 0 50px 0;
}

.production-figma__quality-stats {
  display: flex;
  gap: 100px;
}

.production-figma__stat-number {
  font-size: 64px;
  margin: 0;
}

.production-figma__stat-label {
  font-size: 48px;
  margin: 0;
}

@media (max-width: 768px) {
  .production-figma__hero-title {
    font-size: 48px;
  }
  
  .production-figma__quality {
    grid-template-columns: 1fr;
    gap: 40px;
    padding: 0 20px;
  }
  
  .production-figma__quality-title {
    font-size: 36px;
    line-height: 40px;
  }
}
</style>

<div class="production-figma">
  
  {% comment %} HERO BACKGROUND IMAGE - Full width, directly under header {% endcomment %}
  <div class="production-figma__hero-bg">
    <img 
      src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/image_7.png" 
      alt="Production facility background"
      class="production-figma__hero-image"
      loading="eager"
      width="1920"
      height="734"
    >
  </div>

  {% comment %} HERO TEXT - Left aligned, inside container {% endcomment %}
  <div class="production-figma__hero-text">
    <h1 class="production-figma__hero-title">{{ section.settings.hero_title }}</h1>
    <h2 class="production-figma__hero-subtitle">{{ section.settings.hero_subtitle }}</h2>
    <div class="production-figma__hero-description">{{ section.settings.hero_description }}</div>
  </div>

  {% comment %} QUALITY CONTROL SECTION - Left aligned with icon on left {% endcomment %}
  <div class="production-figma__quality">
    <div class="production-figma__quality-icon">
      <img 
        src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/Olitalia-115_1.jpg" 
        alt="Quality control icon"
        loading="lazy"
        width="379"
        height="379"
      >
    </div>
    <div class="production-figma__quality-content">
      <h2 class="production-figma__quality-title">{{ section.settings.quality_title }}</h2>
      <p class="production-figma__quality-description">{{ section.settings.quality_description }}</p>
      <div class="production-figma__quality-stats">
        <div class="production-figma__quality-stat">
          <p class="production-figma__stat-number" data-target="{{ section.settings.quality_stat1_number | replace: '+', '' | replace: '%', '' | replace: 'KL', '' | replace: 'K', '' }}">0</p>
          <p class="production-figma__stat-label">{{ section.settings.quality_stat1_label }}</p>
        </div>
        <div class="production-figma__quality-stat">
          <p class="production-figma__stat-number" data-target="{{ section.settings.quality_stat2_number | replace: '+', '' | replace: '%', '' | replace: 'KL', '' | replace: 'K', '' }}">0</p>
          <p class="production-figma__stat-label">{{ section.settings.quality_stat2_label }}</p>
        </div>
      </div>
    </div>
  </div>

  {% comment %} INNOVATION SECTION - Left aligned with image {% endcomment %}
  <div class="production-figma__innovation">
    <h2 class="production-figma__innovation-title">{{ section.settings.innovation_title }}</h2>
    <div class="production-figma__innovation-image">
      <img 
        src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/Olitalia-80_1.jpg" 
        alt="Innovation in production"
        class="production-figma__innovation-img"
        loading="lazy"
        width="1207"
        height="591"
      >
    </div>
    <div class="production-figma__innovation-text">{{ section.settings.innovation_description }}</div>
  </div>

  {% comment %} CRAFTSMANSHIP SECTION - Left aligned {% endcomment %}
  <div class="production-figma__craftsmanship">
    <h2 class="production-figma__craftsmanship-title">{{ section.settings.craftsmanship_title }}</h2>
    <p class="production-figma__craftsmanship-description">{{ section.settings.craftsmanship_description }}</p>
    <div class="production-figma__craftsmanship-stats">
      <div class="production-figma__craftsmanship-stat">
        <p class="production-figma__stat-number" data-target="{{ section.settings.craftsmanship_stat1_number | replace: '+', '' | replace: '%', '' | replace: 'KL', '' | replace: 'K', '' }}">0</p>
        <p class="production-figma__stat-label">{{ section.settings.craftsmanship_stat1_label }}</p>
      </div>
      <div class="production-figma__craftsmanship-stat">
        <p class="production-figma__stat-number" data-target="{{ section.settings.craftsmanship_stat2_number | replace: '+', '' | replace: '%', '' | replace: 'KL', '' | replace: 'K', '' }}">0</p>
        <p class="production-figma__stat-label">{{ section.settings.craftsmanship_stat2_label }}</p>
      </div>
    </div>
  </div>

  {% comment %} SUSTAINABILITY SECTION - Left aligned with image {% endcomment %}
  <div class="production-figma__sustainability">
    <h2 class="production-figma__sustainability-title">{{ section.settings.sustainability_title }}</h2>
    <div class="production-figma__sustainability-image">
      <img 
        src="https://cdn.shopify.com/s/files/1/0633/2068/6808/files/77DB91B4-007C-4513-92E9-AC3CD2B8EBAA.jpg" 
        alt="Sustainable production"
        class="production-figma__sustainability-img"
        loading="lazy"
        width="1207"
        height="591"
      >
    </div>
    <div class="production-figma__sustainability-text">
      <p>{{ section.settings.sustainability_description }}</p>
    </div>
  </div>

  {% comment %} FACILITY SECTION - Left aligned {% endcomment %}
  <div class="production-figma__facility">
    <h2 class="production-figma__facility-title">{{ section.settings.facility_title }}</h2>
    <div class="production-figma__facility-text">{{ section.settings.facility_description }}</div>
    <div class="production-figma__facility-stats">
      <div class="production-figma__facility-stat">
        <p class="production-figma__stat-number" data-target="{{ section.settings.facility_stat1_number | replace: '+', '' | replace: '%', '' | replace: 'KL', '' | replace: 'K', '' }}">0</p>
        <p class="production-figma__stat-label">{{ section.settings.facility_stat1_label }}</p>
      </div>
      <div class="production-figma__facility-stat">
        <p class="production-figma__stat-number" data-target="{{ section.settings.facility_stat2_number | replace: '+', '' | replace: '%', '' | replace: 'KL', '' | replace: 'K', '' }}">0</p>
        <p class="production-figma__stat-label">{{ section.settings.facility_stat2_label }}</p>
      </div>
    </div>
  </div>

</div>

