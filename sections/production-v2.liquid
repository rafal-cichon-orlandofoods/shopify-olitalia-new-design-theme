{{ 'production-v2.css' | asset_url | stylesheet_tag }}
{{ 'sustainability-counter.js' | asset_url | script_tag }}

<div class="production-v2">
  
  {%- comment -%} HERO SECTION {%- endcomment -%}
  <div class="production-v2__hero">
    <div class="production-v2__hero-bg">
      <img 
        src="{% if section.settings.hero_image %}{{ section.settings.hero_image | image_url: width: 1920 }}{% endif %}" 
        alt="Production"
        class="production-v2__hero-image"
        loading="eager"
      >
    </div>
    <div class="production-v2__hero-content">
      <h1 class="production-v2__hero-title">{{ section.settings.hero_title | default: "Where Innovation Meets Integrity" }}</h1>
      <p class="production-v2__hero-subtitle">{{ section.settings.hero_subtitle | default: "The world is home to more than 1,600 olive cultivars—and Italy alone nurtures over 600 of them." }}</p>
    </div>
  </div>

  {%- comment -%} STATS SECTION {%- endcomment -%}
  {% if section.settings.show_stats %}
  <div class="production-v2__stats-section">
    <div class="production-v2__stats">
      <div class="production-v2__stat">
        <div class="production-v2__stat-number" data-target="{{ section.settings.stat1_number }}">0</div>
        <div class="production-v2__stat-label">{{ section.settings.stat1_label }}</div>
      </div>
      <div class="production-v2__stat">
        <div class="production-v2__stat-number" data-target="{{ section.settings.stat2_number }}">0</div>
        <div class="production-v2__stat-label">{{ section.settings.stat2_label }}</div>
      </div>
    </div>
  </div>
  {% endif %}

  {%- comment -%} VISUAL BREAK {%- endcomment -%}
  <div class="production-v2__divider">
    <div class="production-v2__divider-icon">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" stroke="white" stroke-width="2" opacity="0.5"/>
        <path d="M50 20 L50 80 M20 50 L80 50" stroke="white" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
  </div>

  {%- comment -%} SECTION 1 - QUALITY CONTROL {%- endcomment -%}
  <div class="production-v2__section production-v2__section--white">
    <div class="production-v2__content">
      <div class="production-v2__text">
        <h2>{{ section.settings.section1_title | default: "Controlled Quality at Every Stage" }}</h2>
        <p>{{ section.settings.section1_text }}</p>
      </div>
      <div class="production-v2__image">
        <img 
          src="{% if section.settings.section1_image %}{{ section.settings.section1_image | image_url: width: 800 }}{% endif %}" 
          alt="{{ section.settings.section1_title }}"
        >
      </div>
    </div>
  </div>

  {%- comment -%} SECTION 2 - INNOVATION {%- endcomment -%}
  <div class="production-v2__section production-v2__section--warm">
    <div class="production-v2__content production-v2__content--reverse">
      <div class="production-v2__image">
        <img 
          src="{% if section.settings.section2_image %}{{ section.settings.section2_image | image_url: width: 800 }}{% endif %}" 
          alt="{{ section.settings.section2_title }}"
        >
      </div>
      <div class="production-v2__text">
        <h2>{{ section.settings.section2_title | default: "Innovation with Purpose" }}</h2>
        <p>{{ section.settings.section2_text }}</p>
      </div>
    </div>
  </div>

  {%- comment -%} VISUAL BREAK {%- endcomment -%}
  <div class="production-v2__divider">
    <div class="production-v2__divider-icon">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" stroke="white" stroke-width="2" opacity="0.5"/>
        <path d="M50 20 L50 80 M20 50 L80 50" stroke="white" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
  </div>

  {%- comment -%} SECTION 3 - CRAFTSMANSHIP {%- endcomment -%}
  <div class="production-v2__section production-v2__section--white">
    <div class="production-v2__content">
      <div class="production-v2__text">
        <h2>{{ section.settings.section3_title | default: "Craftsmanship Meets Modern Efficiency" }}</h2>
        <p>{{ section.settings.section3_text }}</p>
      </div>
      <div class="production-v2__image">
        <img 
          src="{% if section.settings.section3_image %}{{ section.settings.section3_image | image_url: width: 800 }}{% endif %}" 
          alt="{{ section.settings.section3_title }}"
        >
      </div>
    </div>

    {%- comment -%} HIGHLIGHT BOX {%- endcomment -%}
    {% if section.settings.highlight_text != blank %}
    <div class="production-v2__highlight">
      <h3>{{ section.settings.highlight_title }}</h3>
      <p>{{ section.settings.highlight_text }}</p>
    </div>
    {% endif %}
  </div>

  {%- comment -%} QUOTE SECTION {%- endcomment -%}
  {% if section.settings.quote_text != blank %}
  <div class="production-v2__section production-v2__section--warm">
    <div class="production-v2__quote">
      <p class="production-v2__quote-text">{{ section.settings.quote_text }}</p>
      <p class="production-v2__quote-author">{{ section.settings.quote_author | default: "— Olitalia Team" }}</p>
    </div>
  </div>
  {% endif %}

  {%- comment -%} SECTION 4 - SUSTAINABILITY {%- endcomment -%}
  <div class="production-v2__section production-v2__section--white">
    <div class="production-v2__content production-v2__content--reverse">
      <div class="production-v2__image">
        <img 
          src="{% if section.settings.section4_image %}{{ section.settings.section4_image | image_url: width: 800 }}{% endif %}" 
          alt="{{ section.settings.section4_title }}"
        >
      </div>
      <div class="production-v2__text">
        <h2>{{ section.settings.section4_title | default: "Sustainability Through Smart Production" }}</h2>
        <p>{{ section.settings.section4_text }}</p>
      </div>
    </div>
  </div>

  {%- comment -%} CLOSING SECTION {%- endcomment -%}
  <div class="production-v2__section production-v2__section--warm">
    <div class="production-v2__closing">
      <h2>{{ section.settings.closing_title | default: "From Our Facility to Your Table" }}</h2>
      <p>{{ section.settings.closing_text }}</p>
    </div>
  </div>

</div>

