{{ 'sustainability-v2.css' | asset_url | stylesheet_tag }}
{{ 'sustainability-counter.js' | asset_url | script_tag }}

<div class="sustainability-v2">
  
  {%- comment -%} HERO SECTION {%- endcomment -%}
  <div class="sustainability-v2__hero">
    <div class="sustainability-v2__hero-bg">
      <img 
        src="{% if section.settings.hero_image %}{{ section.settings.hero_image | image_url: width: 1920 }}{% endif %}" 
        alt="Sustainability"
        class="sustainability-v2__hero-image"
        loading="eager"
      >
    </div>
    <div class="sustainability-v2__hero-content">
      <h1 class="sustainability-v2__hero-title">{{ section.settings.hero_title | default: "Looking Forward" }}</h1>
      <p class="sustainability-v2__hero-subtitle">{{ section.settings.hero_subtitle | default: "Sustainability at Olitalia is not a destination — it's a direction." }}</p>
      <div class="sustainability-v2__hero-description">
        <p>{{ section.settings.hero_description | default: "We act every day to reduce our footprint, preserve nature's balance, and build a more responsible future." }}</p>
      </div>
    </div>
  </div>

  {%- comment -%} SECTION 1 - PLASTIC NO MORE {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--white">
    <div class="sustainability-v2__icon-section">
      <div class="sustainability-v2__icon">
        <img 
          src="{% if section.settings.plastic_icon %}{{ section.settings.plastic_icon | image_url: width: 400 }}{% endif %}" 
          alt="Plastic No More"
        >
      </div>
      <div class="sustainability-v2__text">
        <h2>{{ section.settings.plastic_title | default: "Plastic No More" }}</h2>
        <p>{{ section.settings.plastic_description }}</p>
      </div>
    </div>

    <div class="sustainability-v2__stats">
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.plastic_stat1_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.plastic_stat1_label }}</div>
      </div>
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.plastic_stat2_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.plastic_stat2_label }}</div>
      </div>
    </div>
  </div>

  {%- comment -%} VISUAL BREAK {%- endcomment -%}
  <div class="sustainability-v2__divider">
    <div class="sustainability-v2__divider-icon">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" stroke="white" stroke-width="2" opacity="0.5"/>
        <path d="M50 20 L50 80 M20 50 L80 50" stroke="white" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
  </div>

  {%- comment -%} SECTION 2 - COLLABORATION {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--warm">
    <div class="sustainability-v2__content">
      <div class="sustainability-v2__image">
        <img 
          src="{% if section.settings.collaboration_image %}{{ section.settings.collaboration_image | image_url: width: 800 }}{% endif %}" 
          alt="Collaboration"
        >
      </div>
      <div class="sustainability-v2__text">
        <h2>{{ section.settings.collaboration_title | default: "Collaboration That Creates Change" }}</h2>
        {{ section.settings.collaboration_description }}
      </div>
    </div>
  </div>

  {%- comment -%} SECTION 3 - FULL CIRCLE THINKING {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--accent">
    <div class="sustainability-v2__text" style="text-align: center; margin-bottom: 60px;">
      <h2>{{ section.settings.circle_title | default: "Full Circle Thinking" }}</h2>
      <p style="max-width: 800px; margin: 0 auto;">{{ section.settings.circle_description }}</p>
    </div>

    <div class="sustainability-v2__stats">
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.circle_stat1_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.circle_stat1_label }}</div>
      </div>
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.circle_stat2_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.circle_stat2_label }}</div>
      </div>
    </div>
  </div>

  {%- comment -%} VISUAL BREAK {%- endcomment -%}
  <div class="sustainability-v2__divider">
    <div class="sustainability-v2__divider-icon">
      <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="45" stroke="white" stroke-width="2" opacity="0.5"/>
        <path d="M50 20 L50 80 M20 50 L80 50" stroke="white" stroke-width="3" stroke-linecap="round"/>
      </svg>
    </div>
  </div>

  {%- comment -%} SECTION 4 - USED BUT FULL OF LIFE {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--white">
    <div class="sustainability-v2__content sustainability-v2__content--reverse">
      <div class="sustainability-v2__text">
        <h2>{{ section.settings.life_title | default: "Used but Full of Life Project" }}</h2>
        <p>{{ section.settings.life_description }}</p>
      </div>
      <div class="sustainability-v2__image">
        <img 
          src="{% if section.settings.life_image %}{{ section.settings.life_image | image_url: width: 800 }}{% endif %}" 
          alt="Used but Full of Life"
        >
      </div>
    </div>

    <div class="sustainability-v2__stats">
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.life_stat1_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.life_stat1_label }}</div>
      </div>
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.life_stat2_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.life_stat2_label }}</div>
      </div>
    </div>
  </div>

  {%- comment -%} QUOTE SECTION {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--warm">
    <div class="sustainability-v2__quote">
      <p class="sustainability-v2__quote-text">{{ section.settings.quote_text | default: "Sustainability is a shared journey. The best ideas emerge through collaboration." }}</p>
      <p class="sustainability-v2__quote-author">{{ section.settings.quote_author | default: "— Olitalia Team" }}</p>
    </div>
  </div>

  {%- comment -%} SECTION 5 - PEOPLE AT HEART {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--white">
    <div class="sustainability-v2__content">
      <div class="sustainability-v2__image">
        <img 
          src="{% if section.settings.people_image %}{{ section.settings.people_image | image_url: width: 800 }}{% endif %}" 
          alt="People at Heart"
        >
      </div>
      <div class="sustainability-v2__text">
        <h2>{{ section.settings.people_title | default: "People at Heart" }}</h2>
        {{ section.settings.people_description }}
      </div>
    </div>
  </div>

  {%- comment -%} SECTION 6 - EFFICIENT RESOURCE USE {%- endcomment -%}
  <div class="sustainability-v2__section sustainability-v2__section--warm">
    <div class="sustainability-v2__text" style="text-align: center; margin-bottom: 60px;">
      <h2>{{ section.settings.resource_title | default: "Efficient Resource Use" }}</h2>
      <p style="max-width: 800px; margin: 0 auto;">{{ section.settings.resource_description }}</p>
    </div>

    <div class="sustainability-v2__stats">
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.resource_stat1_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.resource_stat1_label }}</div>
      </div>
      <div class="sustainability-v2__stat">
        <div class="sustainability-v2__stat-number" data-target="{{ section.settings.resource_stat2_number }}">0</div>
        <div class="sustainability-v2__stat-label">{{ section.settings.resource_stat2_label }}</div>
      </div>
    </div>
  </div>

</div>

