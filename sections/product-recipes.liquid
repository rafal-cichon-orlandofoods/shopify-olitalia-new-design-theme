{{ 'section-product-recipes.css' | asset_url | stylesheet_tag }}

<div class="dynamic-recipes" 
     style="--section-bg: {{ section.settings.section_background_color }};"
     data-section-type="product-recipes" 
     data-section-id="{{ section.id }}"
     data-layout="{{ section.settings.layout }}">
  <div class="container custom-container align-{{ section.settings.section_alignment }}" 
       style="--max-width: {{ section.settings.max_width }}px; --grid-alignment: {{ section.settings.grid_alignment }};"&gt;
    {% if section.settings.show_heading and section.settings.heading != blank or section.settings.show_subheading and section.settings.subheading != blank %}
      <header class="dynamic-recipes-header custom-header align-{{ section.settings.text_alignment }}{% if section.settings.header_background %} has-background{% endif %}{% if section.settings.inline_header %} inline-header{% endif %}" 
              style="--header-spacing: {{ section.settings.header_spacing }}rem;
                     --header-bg-color: {{ section.settings.header_bg_color }};
                     --header-padding: {{ section.settings.header_padding }}rem;
                     --header-border-radius: {{ section.settings.header_border_radius }}px;
                     --heading-color: {{ section.settings.heading_color }};
                     --heading-font-weight: {{ section.settings.heading_font_weight }};
                     --subheading-color: {{ section.settings.subheading_color }};
                     --subheading-font-size: {{ section.settings.subheading_font_size }}rem;
                     --subheading-max-width: {{ section.settings.subheading_max_width }}px;
                     --subheading-bottom-spacing: {{ section.settings.subheading_bottom_spacing }}rem;
                     --header-top-spacing: {{ section.settings.header_top_spacing }}rem;
                     --heading-bottom-spacing: {{ section.settings.heading_bottom_spacing }}rem;
                     --inline-gap: {{ section.settings.inline_gap }}rem;">
        {% if section.settings.show_heading and section.settings.heading != blank %}
          {% case section.settings.heading_size %}
            {% when 1 %}
              <h1 class="dynamic-recipes-title custom-heading">{{ section.settings.heading }}</h1>
            {% when 2 %}
              <h2 class="dynamic-recipes-title custom-heading">{{ section.settings.heading }}</h2>
            {% when 3 %}
              <h3 class="dynamic-recipes-title custom-heading">{{ section.settings.heading }}</h3>
            {% when 4 %}
              <h4 class="dynamic-recipes-title custom-heading">{{ section.settings.heading }}</h4>
            {% when 5 %}
              <h5 class="dynamic-recipes-title custom-heading">{{ section.settings.heading }}</h5>
          {% endcase %}
        {% endif %}
        {% if section.settings.show_subheading and section.settings.subheading != blank %}
          <p class="dynamic-recipes-description custom-subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </header>
    {% endif %}

    <div class="recipes-grid {{ section.settings.layout }} custom-grid">
      {% comment %} Dynamic recipe loading from recipe page {% endcomment %}
      {% assign recipe_count = 0 %}
      {% assign max_recipes = section.settings.recipes_limit %}
      {% assign current_product_handle = product.handle | default: section.settings.product_filter %}
      {% assign current_product_title = product.title | default: section.settings.product_filter %}
      
      {% comment %} Get recipes from the specified recipe page {% endcomment %}
      {% assign recipe_page = pages[section.settings.recipe_page_handle] %}
      
      {% if recipe_page %}
        {% comment %} Look for recipe pages that mention this product {% endcomment %}
        {% for page in pages %}
          {% assign page_handle_start = page.handle | slice: 0, 7 %}
          {% if page_handle_start == 'recipe-' and recipe_count < max_recipes %}
            
            {% comment %} Check if this recipe uses the current product {% endcomment %}
            {% assign show_recipe = false %}
            
            {% if section.settings.filter_by_product and current_product_handle != blank %}
              {% comment %} Filter by product handle or title in page content {% endcomment %}
              {% assign page_content_lower = page.content | downcase %}
              {% assign product_handle_lower = current_product_handle | downcase %}
              {% assign product_title_lower = current_product_title | downcase %}
              
              {% if page_content_lower contains product_handle_lower or page_content_lower contains product_title_lower %}
                {% assign show_recipe = true %}
              {% endif %}
            {% else %}
              {% comment %} Show all recipes if no product filter {% endcomment %}
              {% assign show_recipe = true %}
            {% endif %}
            
            {% if show_recipe %}
              {% assign recipe_count = recipe_count | plus: 1 %}
              
              {% comment %} Extract recipe data from page {% endcomment %}
              {% assign recipe_title = page.title %}
              {% assign recipe_url = page.url %}
              {% assign recipe_description = page.summary | default: page.content | strip_html | truncate: 120 %}
              {% assign recipe_image = null %}
              {% assign recipe_chef = section.settings.default_chef | default: 'Michele Loffreno' %}
              {% assign recipe_time = '30 min' %}
              {% assign recipe_category = 'main course' %}
              {% assign recipe_difficulty = 'easy' %}
              
              {% comment %} Map specific recipe data based on handle {% endcomment %}
              {% case page.handle %}
                {% when 'recipe-seasonal-roasted-vegetables' %}
                  {% assign recipe_image = images['Roasted_Seasonal_Veggies.jpg'] %}
                  {% assign recipe_time = '1h' %}
                  {% assign recipe_category = 'sides' %}
                {% when 'recipe-honey-dijon-vinaigrette' %}
                  {% assign recipe_image = images['Honey-Dijon-Dressing-Web.jpg'] %}
                  {% assign recipe_time = '5 min' %}
                  {% assign recipe_category = 'dressings' %}
                {% when 'recipe-extra-virgin-olive-oil-granola' %}
                  {% assign recipe_image = images['Granola_Final_Website.jpg'] %}
                  {% assign recipe_time = '35 min' %}
                  {% assign recipe_category = 'breakfast' %}
                {% when 'recipe-evoo-english-muffins' %}
                  {% assign recipe_image = images['English-Muffins-Web.jpg'] %}
                  {% assign recipe_time = '13h' %}
                  {% assign recipe_category = 'breakfast' %}
                  {% assign recipe_difficulty = 'medium' %}
                {% when 'recipe-mediterranean-herb-crusted-chicken' %}
                  {% assign recipe_image = images['Mediterranean-Herb-Crusted-Chicken.jpg'] %}
                  {% assign recipe_time = '45 min' %}
                  {% assign recipe_category = 'main course' %}
                  {% assign recipe_difficulty = 'medium' %}
              {% endcase %}
              
              <article class="recipe-card">
                <div class="recipe-image-container">
                  {% if recipe_image %}
                    <a href="{{ recipe_url }}" class="recipe-image-link">
                      <img 
                        src="{{ recipe_image | img_url: '400x300' }}" 
                        alt="{{ recipe_title }}"
                        class="recipe-image"
                        loading="lazy"
                        style="border-radius: {{ section.settings.image_border_radius }}px;"
                      >
                    </a>
                  {% else %}
                    <div class="recipe-image-placeholder">
                      <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C13.1 2 14 2.9 14 4V6C14 7.1 13.1 8 12 8C10.9 8 10 7.1 10 6V4C10 2.9 10.9 2 12 2Z" fill="currentColor"/>
                        <ellipse cx="12" cy="14" rx="8" ry="6" fill="none" stroke="currentColor" stroke-width="2"/>
                      </svg>
                    </div>
                  {% endif %}
                  
                  <!-- Recipe Badges Overlay -->
                  <div class="recipe-overlay">
                    {% if section.settings.show_tags and recipe_category != blank %}
                      <div class="recipe-category-badge">{{ recipe_category | capitalize }}</div>
                    {% endif %}
                    {% if section.settings.show_difficulty and recipe_difficulty != blank %}
                      <div class="recipe-difficulty-badge">{{ recipe_difficulty | capitalize }}</div>
                    {% endif %}
                  </div>
                </div>
          
                <div class="recipe-content">
                  <h3 class="recipe-title">
                    <a href="{{ recipe_url }}">{{ recipe_title }}</a>
                  </h3>
                  
                  {% if section.settings.show_excerpt and recipe_description != blank %}
                    <p class="recipe-description">{{ recipe_description }}</p>
                  {% endif %}
                  
                  {% if section.settings.show_tags and recipe_category != blank %}
                    <div class="recipe-tags">
                      <span class="recipe-tag">{{ recipe_category | capitalize }}</span>
                    </div>
                  {% endif %}
                  
                  <div class="recipe-meta">
                    {% if section.settings.show_time and recipe_time != blank %}
                      <div class="recipe-time">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                          <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
                        </svg>
                        <span>{{ recipe_time }}</span>
                      </div>
                    {% endif %}
                    
                    {% if section.settings.show_chef and recipe_chef != blank %}
                      <div class="recipe-chef">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
                          <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
                        </svg>
                        <span>{{ recipe_chef }}</span>
                      </div>
                    {% endif %}
                  </div>
                  
                  {% if section.settings.show_button %}
                    <a href="{{ recipe_url }}" class="recipe-cta">
                      {{ section.settings.button_text | default: 'View Recipe' }}
                    </a>
                  {% endif %}
                </div>
              </article>
            {% endif %}
          {% endif %}
        {% endfor %}
      {% else %}
        {% comment %} Fallback to static blocks if no recipe page specified {% endcomment %}
        {% for block in section.blocks %}
          <article class="recipe-card" {{ block.shopify_attributes }}>
            <div class="recipe-image-container">
              {% if block.settings.recipe_image %}
                <a href="{{ block.settings.recipe_url }}" class="recipe-image-link">
                  <img 
                    src="{{ block.settings.recipe_image | img_url: '400x300' }}" 
                    alt="{{ block.settings.recipe_title }}"
                    class="recipe-image"
                    loading="lazy"
                    style="border-radius: {{ section.settings.image_border_radius }}px;"
                  >
                </a>
              {% else %}
                <div class="recipe-image-placeholder">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2C13.1 2 14 2.9 14 4V6C14 7.1 13.1 8 12 8C10.9 8 10 7.1 10 6V4C10 2.9 10.9 2 12 2Z" fill="currentColor"/>
                    <ellipse cx="12" cy="14" rx="8" ry="6" fill="none" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
              {% endif %}
              
              <!-- Recipe Badges Overlay -->
              <div class="recipe-overlay">
                {% if section.settings.show_tags and block.settings.category != blank %}
                  <div class="recipe-category-badge">{{ block.settings.category | capitalize }}</div>
                {% endif %}
                {% if section.settings.show_difficulty and block.settings.difficulty != blank %}
                  <div class="recipe-difficulty-badge">{{ block.settings.difficulty | capitalize }}</div>
                {% endif %}
              </div>
            </div>
      
            <div class="recipe-content">
              <h3 class="recipe-title">
                <a href="{{ block.settings.recipe_url }}">{{ block.settings.recipe_title }}</a>
              </h3>
              
              {% if section.settings.show_excerpt and block.settings.recipe_description != blank %}
                <p class="recipe-description">{{ block.settings.recipe_description }}</p>
              {% endif %}
              
              {% if section.settings.show_tags and block.settings.category != blank %}
                <div class="recipe-tags">
                  <span class="recipe-tag">{{ block.settings.category | capitalize }}</span>
                </div>
              {% endif %}
              
              <div class="recipe-meta">
                {% if section.settings.show_time and block.settings.cooking_time != blank %}
                  <div class="recipe-time">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                      <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <span>{{ block.settings.cooking_time }}</span>
                  </div>
                {% endif %}
                
                {% if section.settings.show_chef and block.settings.chef_name != blank %}
                  <div class="recipe-chef">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2"/>
                      <circle cx="12" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
                    </svg>
                    <span>{{ block.settings.chef_name }}</span>
                  </div>
                {% endif %}
              </div>
              
              {% if section.settings.show_button %}
                <a href="{{ block.settings.recipe_url }}" class="recipe-cta">
                  {{ section.settings.button_text | default: 'View Recipe' }}
                </a>
              {% endif %}
            </div>
          </article>
        {% endfor %}
      {% endif %}
      
      {% comment %} Show message if no recipes found {% endcomment %}
      {% if recipe_count == 0 and section.blocks.size == 0 %}
        <div class="no-recipes-message">
          <h3>No recipes found</h3>
          <p>{% if section.settings.filter_by_product %}No recipes found that use this product.{% else %}No recipe pages found. Create pages with handles starting with 'recipe-'.{% endif %}</p>
        </div>
      {% endif %}
    </div>
    
    {% if section.settings.show_view_all and section.settings.view_all_link != blank %}
      <div class="recipes-cta">
        <a href="{{ section.settings.view_all_link }}" class="view-all-button">
          {{ section.settings.view_all_text | default: 'View All Recipes' }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

