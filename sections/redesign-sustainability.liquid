{{ 'redesign-sustainability.css' | asset_url | stylesheet_tag }}

<div class="redesign-sustainability">
  
  {%- comment -%}
    HERO SECTION
    Full-width background image with overlay text
  {%- endcomment -%}
  <section class="redesign-sustainability__hero">
    {% if section.settings.hero_image %}
      <img 
        src="{{ section.settings.hero_image | image_url: width: 2000 }}" 
        alt="Sustainability Hero"
        class="redesign-sustainability__hero-bg"
        loading="eager"
        fetchpriority="high"
      >
    {% endif %}
    
    <div class="redesign-sustainability__hero-content">
      <div class="redesign-sustainability__hero-text">
        {% if section.settings.hero_title != blank %}
          <h1 class="redesign-sustainability__hero-title">{{ section.settings.hero_title }}</h1>
        {% endif %}
        
        {% if section.settings.hero_subtitle != blank %}
          <p class="redesign-sustainability__hero-subtitle">{{ section.settings.hero_subtitle }}</p>
        {% endif %}
        
        {% if section.settings.hero_description != blank %}
          <div class="redesign-sustainability__hero-description">
            {{ section.settings.hero_description }}
          </div>
        {% endif %}
      </div>
    </div>
  </section>

  {%- comment -%}
    PLASTIC NO MORE SECTION
    Icon, title, description and stats
  {%- endcomment -%}
  <section class="redesign-sustainability__section redesign-sustainability__plastic">
    <div class="redesign-sustainability__container">
      {% if section.settings.plastic_icon %}
        <div class="redesign-sustainability__plastic-icon">
          <img 
            src="{{ section.settings.plastic_icon | image_url: width: 400 }}" 
            alt="Plastic No More"
            loading="lazy"
          >
        </div>
      {% endif %}
      
      {% if section.settings.plastic_title != blank %}
        <h2 class="redesign-sustainability__section-title">{{ section.settings.plastic_title }}</h2>
      {% endif %}
      
      {% if section.settings.plastic_description != blank %}
        <p class="redesign-sustainability__section-description">{{ section.settings.plastic_description }}</p>
      {% endif %}
      
      <div class="redesign-sustainability__stats">
        <div class="redesign-sustainability__stat">
          <span class="redesign-sustainability__stat-number">{{ section.settings.plastic_stat1_number | default: "100%" }}</span>
          <span class="redesign-sustainability__stat-label">{{ section.settings.plastic_stat1_label | default: "Plastic-free facilities" }}</span>
        </div>
        
        <div class="redesign-sustainability__stat">
          <span class="redesign-sustainability__stat-number">{{ section.settings.plastic_stat2_number | default: "85%" }}</span>
          <span class="redesign-sustainability__stat-label">{{ section.settings.plastic_stat2_label | default: "Recycled packaging" }}</span>
        </div>
      </div>
    </div>
  </section>

  {%- comment -%}
    COLLABORATION SECTION
    Title, large image, descriptive text
  {%- endcomment -%}
  <section class="redesign-sustainability__section redesign-sustainability__collaboration">
    <div class="redesign-sustainability__container">
      {% if section.settings.collaboration_title != blank %}
        <h2 class="redesign-sustainability__section-title">{{ section.settings.collaboration_title }}</h2>
      {% endif %}
      
      {% if section.settings.collaboration_image %}
        <div class="redesign-sustainability__image-wrapper">
          <img 
            src="{{ section.settings.collaboration_image | image_url: width: 1400 }}" 
            alt="Collaboration"
            class="redesign-sustainability__section-image"
            loading="lazy"
          >
        </div>
      {% endif %}
      
      {% if section.settings.collaboration_description != blank %}
        <div class="redesign-sustainability__section-text">
          {{ section.settings.collaboration_description }}
        </div>
      {% endif %}
    </div>
  </section>

  {%- comment -%}
    FULL CIRCLE THINKING SECTION
    Centered title, description and stats
  {%- endcomment -%}
  <section class="redesign-sustainability__section redesign-sustainability__circle">
    <div class="redesign-sustainability__container">
      {% if section.settings.circle_title != blank %}
        <h2 class="redesign-sustainability__section-title redesign-sustainability__section-title--center">{{ section.settings.circle_title }}</h2>
      {% endif %}
      
      {% if section.settings.circle_description != blank %}
        <p class="redesign-sustainability__section-description redesign-sustainability__section-description--center">{{ section.settings.circle_description }}</p>
      {% endif %}
      
      <div class="redesign-sustainability__stats">
        <div class="redesign-sustainability__stat">
          <span class="redesign-sustainability__stat-number">{{ section.settings.circle_stat1_number | default: "95%" }}</span>
          <span class="redesign-sustainability__stat-label">{{ section.settings.circle_stat1_label | default: "Byproduct recovery" }}</span>
        </div>
        
        <div class="redesign-sustainability__stat">
          <span class="redesign-sustainability__stat-number">{{ section.settings.circle_stat2_number | default: "Zero" }}</span>
          <span class="redesign-sustainability__stat-label">{{ section.settings.circle_stat2_label | default: "Waste to landfill" }}</span>
        </div>
      </div>
    </div>
  </section>

  {%- comment -%}
    USED BUT FULL OF LIFE PROJECT SECTION
    Title, description, image and stats in grid layout
  {%- endcomment -%}
  <section class="redesign-sustainability__section redesign-sustainability__life">
    <div class="redesign-sustainability__container">
      {% if section.settings.life_title != blank %}
        <h2 class="redesign-sustainability__section-title redesign-sustainability__section-title--center">{{ section.settings.life_title }}</h2>
      {% endif %}
      
      {% if section.settings.life_description != blank %}
        <p class="redesign-sustainability__section-description redesign-sustainability__section-description--center">{{ section.settings.life_description }}</p>
      {% endif %}
      
      <div class="redesign-sustainability__life-content">
        {% if section.settings.life_image %}
          <div class="redesign-sustainability__life-image">
            <img 
              src="{{ section.settings.life_image | image_url: width: 800 }}" 
              alt="Used but Full of Life Project"
              loading="lazy"
            >
          </div>
        {% endif %}
        
        <div class="redesign-sustainability__life-stats">
          <div class="redesign-sustainability__stat">
            <span class="redesign-sustainability__stat-number">{{ section.settings.life_stat1_number | default: "500+" }}</span>
            <span class="redesign-sustainability__stat-label">{{ section.settings.life_stat1_label | default: "Partner restaurants" }}</span>
          </div>
          
          <div class="redesign-sustainability__stat">
            <span class="redesign-sustainability__stat-number">{{ section.settings.life_stat2_number | default: "10KL" }}</span>
            <span class="redesign-sustainability__stat-label">{{ section.settings.life_stat2_label | default: "Oil recovered yearly" }}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  {%- comment -%}
    PEOPLE AT HEART SECTION
    Title, large image, descriptive text
  {%- endcomment -%}
  <section class="redesign-sustainability__section redesign-sustainability__people">
    <div class="redesign-sustainability__container">
      {% if section.settings.people_title != blank %}
        <h2 class="redesign-sustainability__section-title">{{ section.settings.people_title }}</h2>
      {% endif %}
      
      {% if section.settings.people_image %}
        <div class="redesign-sustainability__image-wrapper">
          <img 
            src="{{ section.settings.people_image | image_url: width: 1400 }}" 
            alt="People at Heart"
            class="redesign-sustainability__section-image"
            loading="lazy"
          >
        </div>
      {% endif %}
      
      {% if section.settings.people_description != blank %}
        <div class="redesign-sustainability__section-text">
          {{ section.settings.people_description }}
        </div>
      {% endif %}
    </div>
  </section>

  {%- comment -%}
    EFFICIENT RESOURCE USE SECTION
    Centered title, description and stats
  {%- endcomment -%}
  <section class="redesign-sustainability__section redesign-sustainability__resource">
    <div class="redesign-sustainability__container">
      {% if section.settings.resource_title != blank %}
        <h2 class="redesign-sustainability__section-title redesign-sustainability__section-title--center">{{ section.settings.resource_title }}</h2>
      {% endif %}
      
      {% if section.settings.resource_description != blank %}
        <p class="redesign-sustainability__section-description redesign-sustainability__section-description--center">{{ section.settings.resource_description }}</p>
      {% endif %}
      
      <div class="redesign-sustainability__stats">
        <div class="redesign-sustainability__stat">
          <span class="redesign-sustainability__stat-number">{{ section.settings.resource_stat1_number | default: "40%" }}</span>
          <span class="redesign-sustainability__stat-label">{{ section.settings.resource_stat1_label | default: "Water Reduction" }}</span>
        </div>
        
        <div class="redesign-sustainability__stat">
          <span class="redesign-sustainability__stat-number">{{ section.settings.resource_stat2_number | default: "30%" }}</span>
          <span class="redesign-sustainability__stat-label">{{ section.settings.resource_stat2_label | default: "Energy Savings" }}</span>
        </div>
      </div>
    </div>
  </section>

</div>

