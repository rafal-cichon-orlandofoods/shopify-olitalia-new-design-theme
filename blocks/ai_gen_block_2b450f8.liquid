{% doc %}
  @prompt
    Olitalia Innovation Lab (O.I.L.)
    Every great discovery begins with a question — and at the Olitalia Innovation Lab, ours is simple: what truly makes great oil great? 
    At the Olitalia Innovation Lab, we explore that story through the lens of science, creativity, and passion.
    Our Innovation Lab is a place where knowledge meets curiosity. Here, we study oil not just as an ingredient, but as a living element that connects food, health, and pleasure. It’s a space designed to understand how oil behaves in every culinary context — how it cooks, reacts, enhances, and elevates.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-innovation-lab-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    overflow: hidden;
  }

  .ai-innovation-lab-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .ai-innovation-lab-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-innovation-lab-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    letter-spacing: {{ block.settings.subtitle_letter_spacing }}px;
    text-transform: uppercase;
    margin-bottom: 16px;
    font-weight: 500;
  }

  .ai-innovation-lab-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    line-height: 1.1;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 400;
  }

  .ai-innovation-lab-intro-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    max-width: {{ block.settings.intro_max_width }}px;
    margin: 0 auto {{ block.settings.intro_spacing }}px;
  }

  .ai-innovation-lab-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.content_gap }}px;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-innovation-lab-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-innovation-lab-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: 0 {{ block.settings.card_hover_lift | times: 2 }}px {{ block.settings.card_hover_lift | times: 4 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-innovation-lab-card-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: 50%;
    color: {{ block.settings.icon_color }};
  }

  .ai-innovation-lab-card-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
  }

  .ai-innovation-lab-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-weight: 500;
  }

  .ai-innovation-lab-card-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-innovation-lab-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    margin-bottom: {{ block.settings.image_spacing }}px;
  }

  .ai-innovation-lab-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-innovation-lab-image-placeholder-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    width: 100%;
    aspect-ratio: 16 / 9;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-innovation-lab-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-innovation-lab-cta-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-innovation-lab-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .ai-innovation-lab-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  .ai-innovation-lab-decorative-element-{{ ai_gen_id }} {
    position: absolute;
    opacity: {{ block.settings.decorative_opacity }};
    pointer-events: none;
    z-index: 1;
  }

  .ai-innovation-lab-decorative-element-{{ ai_gen_id }}--top-left {
    top: -50px;
    left: -50px;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, {{ block.settings.decorative_color }} 0%, transparent 70%);
  }

  .ai-innovation-lab-decorative-element-{{ ai_gen_id }}--bottom-right {
    bottom: -50px;
    right: -50px;
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, {{ block.settings.decorative_color }} 0%, transparent 70%);
  }

  @media screen and (max-width: 989px) {
    .ai-innovation-lab-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-innovation-lab-content-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-innovation-lab-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-innovation-lab-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.5 }}px {{ block.settings.padding_horizontal | times: 0.5 }}px {{ block.settings.padding_bottom | times: 0.5 }}px;
    }

    .ai-innovation-lab-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-innovation-lab-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.5 }}px;
    }

    .ai-innovation-lab-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-innovation-lab-intro-{{ ai_gen_id }} {
      font-size: {{ block.settings.intro_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-innovation-lab-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_decorative_elements %}
    <div class="ai-innovation-lab-decorative-element-{{ ai_gen_id }} ai-innovation-lab-decorative-element-{{ ai_gen_id }}--top-left"></div>
    <div class="ai-innovation-lab-decorative-element-{{ ai_gen_id }} ai-innovation-lab-decorative-element-{{ ai_gen_id }}--bottom-right"></div>
  {% endif %}

  <div class="ai-innovation-lab-container-{{ ai_gen_id }}">
    <div class="ai-innovation-lab-header-{{ ai_gen_id }}">
      {% if block.settings.subtitle != blank %}
        <div class="ai-innovation-lab-subtitle-{{ ai_gen_id }}">
          {{ block.settings.subtitle }}
        </div>
      {% endif %}

      {% if block.settings.title != blank %}
        <h2 class="ai-innovation-lab-title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </h2>
      {% endif %}

      {% if block.settings.intro_text != blank %}
        <div class="ai-innovation-lab-intro-{{ ai_gen_id }}">
          {{ block.settings.intro_text }}
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_image and block.settings.featured_image %}
      <div class="ai-innovation-lab-image-wrapper-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.featured_image | image_url: width: 1600 }}"
          alt="{{ block.settings.featured_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.featured_image.width }}"
          height="{{ block.settings.featured_image.height }}"
          class="ai-innovation-lab-image-{{ ai_gen_id }}"
        >
      </div>
    {% elsif block.settings.show_image %}
      <div class="ai-innovation-lab-image-wrapper-{{ ai_gen_id }}">
        <div class="ai-innovation-lab-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
