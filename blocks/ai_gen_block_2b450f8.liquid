              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
              </svg>
            </div>
          {% endif %}
          {% if block.settings.card_1_title != blank %}
            <h3 class="ai-innovation-lab-card-title-{{ ai_gen_id }}">
              {{ block.settings.card_1_title }}
            </h3>
          {% endif %}
          {% if block.settings.card_1_text != blank %}
            <div class="ai-innovation-lab-card-text-{{ ai_gen_id }}">
              {{ block.settings.card_1_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.card_2_title != blank or block.settings.card_2_text != blank %}
        <div class="ai-innovation-lab-card-{{ ai_gen_id }}">
          {% if block.settings.show_icons %}
            <div class="ai-innovation-lab-card-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                <line x1="12" y1="17" x2="12.01" y2="17"></line>
              </svg>
            </div>
          {% endif %}
          {% if block.settings.card_2_title != blank %}
            <h3 class="ai-innovation-lab-card-title-{{ ai_gen_id }}">
              {{ block.settings.card_2_title }}
            </h3>
          {% endif %}
          {% if block.settings.card_2_text != blank %}
            <div class="ai-innovation-lab-card-text-{{ ai_gen_id }}">
              {{ block.settings.card_2_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.card_3_title != blank or block.settings.card_3_text != blank %}
        <div class="ai-innovation-lab-card-{{ ai_gen_id }}">
          {% if block.settings.show_icons %}
            <div class="ai-innovation-lab-card-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" stroke="none">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
              </svg>
            </div>
          {% endif %}
          {% if block.settings.card_3_title != blank %}
            <h3 class="ai-innovation-lab-card-title-{{ ai_gen_id }}">
              {{ block.settings.card_3_title }}
            </h3>
          {% endif %}
          {% if block.settings.card_3_text != blank %}
            <div class="ai-innovation-lab-card-text-{{ ai_gen_id }}">
              {{ block.settings.card_3_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {% if block.settings.button_text != blank %}
      <div class="ai-innovation-lab-cta-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="ai-innovation-lab-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

