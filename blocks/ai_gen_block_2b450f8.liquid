    {% endif %}

    <div class="ai-innovation-lab-content-{{ ai_gen_id }}">
      {% if block.settings.card_1_title != blank or block.settings.card_1_text != blank %}
        <div class="ai-innovation-lab-card-{{ ai_gen_id }}">
          {% if block.settings.show_icons %}
