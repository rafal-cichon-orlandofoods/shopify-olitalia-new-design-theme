{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-container-{{ ai_gen_id }} {
    max-width: 100%;
    width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  @media (min-width: 1200px) {
    .ai-testimonials-container-{{ ai_gen_id }} {
      max-width: 1200px;
    }
  }
  
  @media (min-width: 1400px) {
    .ai-testimonials-container-{{ ai_gen_id }} {
      max-width: 1400px;
    }
  }
  
  @media (min-width: 1600px) {
    .ai-testimonials-container-{{ ai_gen_id }} {
      max-width: 1600px;
    }
  }
  
  @media (min-width: 1920px) {
    .ai-testimonials-container-{{ ai_gen_id }} {
      max-width: 1800px;
    }
  }

  .ai-testimonials-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-testimonials-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-testimonials-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-testimonials-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-testimonials-slider-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    flex-wrap: nowrap;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
  }
  
  .ai-testimonials-slider-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    flex: 1 1 calc(33.333% - {{ block.settings.card_gap }}px);
    min-width: 320px;
    max-width: 500px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .ai-testimonial-card-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    color: {{ block.settings.quote_color }};
    line-height: 1.6;
    margin: 0 0 24px;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-weight: 600;
    font-size: {{ block.settings.name_size }}px;
    color: {{ block.settings.name_color }};
    margin: 0;
  }

  .ai-testimonial-role-{{ ai_gen_id }} {
    font-size: {{ block.settings.role_size }}px;
    color: {{ block.settings.role_color }};
    margin: 0;
  }

  .ai-testimonials-controls-{{ ai_gen_id }} {
    display: none;
  }

  /* Responsive scaling for larger screens */
  @media screen and (min-width: 1400px) {
    .ai-testimonial-card-{{ ai_gen_id }} {
      font-size: 1.05em;
    }
  }
  
  @media screen and (min-width: 1600px) {
    .ai-testimonial-card-{{ ai_gen_id }} {
      font-size: 1.1em;
    }
  }
  
  @media screen and (min-width: 1920px) {
    .ai-testimonial-card-{{ ai_gen_id }} {
      font-size: 1.15em;
    }
  }

  @media screen and (max-width: 989px) {
    .ai-testimonial-card-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - {{ block.settings.card_gap }}px / 2);
      min-width: 280px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-card-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - 20px);
      min-width: 250px;
    }

    .ai-testimonials-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.6);
    }

    .ai-testimonials-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }
  }
{% endstyle %}

