{% doc %}
  @prompt
    add -Sustainability is woven into everything we do.  
    
    It shapes how we source, produce, and share our oils and vinegars, ensuring that every step respects people, the planet, and the Italian heritage weâ€™re proud to represent. 
    
    Because creating great flavor should never come at the expense of the world that gives it to us. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-sustainability-text-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-sustainability-text__content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-sustainability-text__heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-sustainability-text__body-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-sustainability-text__body-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
  }

  .ai-sustainability-text__body-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-sustainability-text-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 | round }}px {{ block.settings.padding_horizontal | times: 0.7 | round }}px {{ block.settings.padding_bottom | times: 0.7 | round }}px;
    }

    .ai-sustainability-text__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 | round }}px;
    }

    .ai-sustainability-text__body-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size | times: 0.9 | round }}px;
    }
  }
{% endstyle %}

<div class="ai-sustainability-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-sustainability-text__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-sustainability-text__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.body_text != blank %}
      <div class="ai-sustainability-text__body-{{ ai_gen_id }}">
        {{ block.settings.body_text }}
      </div>
    {% endif %}
  </div>
</div>

