<script>
  (function() {
    class FaqAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.categoryButtons = this.querySelectorAll('.ai-faq-category-btn-{{ ai_gen_id }}');
        this.faqItems = this.querySelectorAll('.ai-faq-item-{{ ai_gen_id }}');
        this.questionButtons = this.querySelectorAll('.ai-faq-question-{{ ai_gen_id }}');
        
        this.setupCategoryFilters();
        this.setupAccordion();
      }

      setupCategoryFilters() {
        this.categoryButtons.forEach(button => {
          button.addEventListener('click', () => {
            const category = button.getAttribute('data-category');
            
            this.categoryButtons.forEach(btn => btn.classList.remove('active'));
            button.classList.add('active');
            
            this.faqItems.forEach(item => {
              const itemCategory = item.getAttribute('data-category');
              if (category === 'all' || itemCategory === category) {
                item.style.display = 'block';
              } else {
                item.style.display = 'none';
                item.classList.remove('active');
                const questionBtn = item.querySelector('.ai-faq-question-{{ ai_gen_id }}');
                if (questionBtn) {
                  questionBtn.setAttribute('aria-expanded', 'false');
                }
              }
            });
          });
        });
      }

      setupAccordion() {
        this.questionButtons.forEach(button => {
          button.addEventListener('click', () => {
            const item = button.closest('.ai-faq-item-{{ ai_gen_id }}');
            const isActive = item.classList.contains('active');
            
            item.classList.toggle('active');
            button.setAttribute('aria-expanded', !isActive);
          });
        });
      }
    }

    customElements.define('faq-accordion-{{ ai_gen_id }}', FaqAccordion{{ ai_gen_id }});
  })();
</script>

