{% style %}
  .ai-innovation-block-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-innovation-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-innovation-intro-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.spacing_between_items }}px;
  }

  .ai-innovation-intro-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    font-weight: 500;
    line-height: 1.2;
  }

  .ai-innovation-intro-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.intro_text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    max-width: 900px;
    margin: 0 auto 40px;
  }

  .ai-innovation-stats-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 60px;
    flex-wrap: wrap;
    margin: 60px 0; /* Added spacing above and below stats */
  }

  .ai-innovation-stat-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-innovation-stat-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.stat_number_size }}px;
    color: {{ block.settings.accent_color }};
    font-weight: 600;
    margin: 0 0 8px;
    line-height: 1;
  }

  .ai-innovation-stat-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.stat_label_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.4;
  }

  .ai-innovation-item-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    align-items: center;
    margin-bottom: {{ block.settings.spacing_between_items }}px;
  }

  .ai-innovation-item-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-innovation-item-{{ ai_gen_id }}.reverse {
    direction: rtl;
  }

  .ai-innovation-item-{{ ai_gen_id }}.reverse > * {
    direction: ltr;
  }

  .ai-innovation-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-innovation-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-innovation-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-innovation-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 400px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-innovation-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-innovation-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-innovation-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-innovation-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-innovation-closing-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.spacing_between_items }}px;
  }

  .ai-innovation-closing-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 800px;
    margin: 40px auto 0;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-innovation-closing-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-innovation-closing-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.closing_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    font-weight: 500;
    line-height: 1.2;
  }

  .ai-innovation-closing-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.closing_text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    max-width: 900px;
    margin: 0 auto;
  }

  @media screen and (max-width: 989px) {
    .ai-innovation-item-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-innovation-item-{{ ai_gen_id }}.reverse {
      direction: ltr;
    }

    .ai-innovation-image-wrapper-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-innovation-intro-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.intro_title_size }}px * 0.7);
    }

    .ai-innovation-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-innovation-stat-number-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.stat_number_size }}px * 0.8);
    }

    .ai-innovation-stats-{{ ai_gen_id }} {
      gap: 40px;
    }

    .ai-innovation-closing-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.closing_title_size }}px * 0.7);
    }
  }
