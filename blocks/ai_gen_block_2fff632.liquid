<div class="ai-innovation-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-innovation-container-{{ ai_gen_id }}">
    {% if block.settings.show_intro %}
      <div class="ai-innovation-intro-{{ ai_gen_id }}">
        {% if block.settings.intro_title != blank %}
          <h2 class="ai-innovation-intro-title-{{ ai_gen_id }}">{{ block.settings.intro_title }}</h2>
        {% endif %}

        {% if block.settings.intro_text != blank %}
          <div class="ai-innovation-intro-text-{{ ai_gen_id }}">{{ block.settings.intro_text }}</div>
        {% endif %}

        {% if block.settings.show_stats %}
          <div class="ai-innovation-stats-{{ ai_gen_id }}">
            {% if block.settings.stat_1_number != blank %}
              <div class="ai-innovation-stat-{{ ai_gen_id }}">
                <div class="ai-innovation-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_1_number }}</div>
                <div class="ai-innovation-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_1_label }}</div>
              </div>
            {% endif %}

            {% if block.settings.stat_2_number != blank %}
              <div class="ai-innovation-stat-{{ ai_gen_id }}">
                <div class="ai-innovation-stat-number-{{ ai_gen_id }}">{{ block.settings.stat_2_number }}</div>
                <div class="ai-innovation-stat-label-{{ ai_gen_id }}">{{ block.settings.stat_2_label }}</div>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.settings.intro_text1 != blank %}
          <div class="ai-innovation-intro-text-{{ ai_gen_id }}">{{ block.settings.intro_text1 }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% for i in (1..5) %}
      {% liquid
        assign item_enabled_key = 'item_' | append: i | append: '_enabled'
        assign item_title_key = 'item_' | append: i | append: '_title'
        assign item_text_key = 'item_' | append: i | append: '_text'
        assign item_image_key = 'item_' | append: i | append: '_image'
        assign item_layout_key = 'item_' | append: i | append: '_layout'

        assign item_enabled = block.settings[item_enabled_key]
        assign item_title = block.settings[item_title_key]
        assign item_text = block.settings[item_text_key]
        assign item_image = block.settings[item_image_key]
        assign item_layout = block.settings[item_layout_key]
      %}

      {% if item_enabled %}
        <div class="ai-innovation-item-{{ ai_gen_id }} {% if item_layout == 'image_right' %}reverse{% endif %}">
          <div class="ai-innovation-content-{{ ai_gen_id }}">
            {% if item_title != blank %}
              <h3 class="ai-innovation-title-{{ ai_gen_id }}">{{ item_title }}</h3>
            {% endif %}

            {% if item_text != blank %}
              <div class="ai-innovation-text-{{ ai_gen_id }}">{{ item_text }}</div>
            {% endif %}
          </div>

          <div class="ai-innovation-image-wrapper-{{ ai_gen_id }}">
            {% if item_image %}
              <img
                src="{{ item_image | image_url: width: 1200 }}"
                alt="{{ item_image.alt | escape }}"
                loading="lazy"
                width="{{ item_image.width }}"
                height="{{ item_image.height }}"
                class="ai-innovation-image-{{ ai_gen_id }}"
              >
            {% else %}
              <div class="ai-innovation-image-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
                <div class="ai-innovation-empty-state-{{ ai_gen_id }}">
                  Add an image for item {{ i }}
                </div>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}

    {% if block.settings.show_closing %}
      <div class="ai-innovation-closing-{{ ai_gen_id }}">
        {% if block.settings.closing_title != blank %}
          <h2 class="ai-innovation-closing-title-{{ ai_gen_id }}">{{ block.settings.closing_title }}</h2>
        {% endif %}

        {% if block.settings.closing_text != blank %}
          <div class="ai-innovation-closing-text-{{ ai_gen_id }}">{{ block.settings.closing_text }}</div>
        {% endif %}

        {% if block.settings.closing_image %}
          <div class="ai-innovation-closing-image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.closing_image | image_url: width: 1200 }}"
              alt="{{ block.settings.closing_image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.closing_image.width }}"
              height="{{ block.settings.closing_image.height }}"
              class="ai-innovation-closing-image-{{ ai_gen_id }}"
            >
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

